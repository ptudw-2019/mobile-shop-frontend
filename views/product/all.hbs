<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="/">Trang chủ</a> <span class="mx-2 mb-0">/</span> <strong
                    class="text-black">{{title}}</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-9 order-2">

                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="float-md-left mb-4">
                            <h2 class="text-black h5">Sản phẩm</h2>
                        </div>
                        <div class="d-flex">
                            <div class="dropdown mr-1 ml-md-auto">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
                                    id="dropdownMenuOffset" data-toggle="dropdown" aria-haspopup="true"
                                    aria-expanded="false">
                                    Mới nhất
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
                                    {{#each data.brands}}
                                    <a class="dropdown-item text-capitalize"
                                        href="/product/{{this.name}}">{{this.name}}</a>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="btn-group">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle"
                                    id="dropdownMenuReference" data-toggle="dropdown">Sắp xếp</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                                    <a class="dropdown-item" href="#">Bán chạy</a>
                                    <a class="dropdown-item" href="#">Tên sản phẩm, tăng dần</a>
                                    <a class="dropdown-item" href="#">Tên sản phẩm, giảm dần</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Giá, thấp đến cao</a>
                                    <a class="dropdown-item" href="#">Giá, cao đến thấp</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-5">
                    {{#each data.items}}
                    <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                        <div class="block-4 text-center border">
                            <figure class="block-4-image">
                                <a href="/product/{{this.uri}}"><img src="{{this.image}}" alt="Image placeholder"
                                        class="img-fluid"></a>
                            </figure>
                            <div class="block-4-text p-4">
                                <h3><a href="/product/{{this.uri}}">{{this.name}}</a></h3>
                                <p class="mb-0">{{this.info}}</p>
                                <p class="text-primary font-weight-bold">{{this.price}} đ</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}


                </div>
                <div class="row" data-aos="fade-up">
                    <div class="col-md-12 text-center">
                        <div class="site-block-27">
                            <ul>
                                <li><a href="#">&lt;</a></li>
                                <li class="active"><span>1</span></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Thương hiệu</h3>
                    <ul class="list-unstyled mb-0">
                        {{#each data.brands}}
                        <li class="mb-1"><a href="/product/{{this.name}}"
                                class="d-flex text-capitalize"><span>{{this.name}}</span> <span
                                    class="text-black ml-auto">({{this.count}})</span></a></li>
                        {{/each}}
                    </ul>
                </div>

                <div class="border p-4 rounded mb-4">
                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Giá tiền</h3>
                        <div id="slider-range" class="border-primary"></div>
                        <input type="text" name="text" id="amount" class="form-control border-0 pl-0 bg-white"
                            disabled="" />
                    </div>

                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Dung lượng RAM</h3>
                        {{#each data.ram}}
                        <label for="{{this.size}}" class="d-flex">
                            <input type="radio" name="ram" id="{{this.size}}" class="mr-2 mt-1"> <span
                                class="text-black">{{this.size}}
                                ({{this.count}})</span>
                        </label>
                        {{/each}}
                    </div>

                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Màu sắc</h3>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-dark color d-inline-block rounded-circle mr-2"></span> <span
                                class="text-black">Đen ({{data.color.black}})</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-danger color d-inline-block rounded-circle mr-2"></span> <span
                                class="text-black">Đỏ ({{data.color.red}})</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-info color d-inline-block rounded-circle mr-2"></span> <span
                                class="text-black">Xanh dương ({{data.color.blue}})</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-warning color d-inline-block rounded-circle mr-2"></span> <span
                                class="text-black">Vàng ({{data.color.yellow}})</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>